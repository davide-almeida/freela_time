<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Esqueceu a senha?</h1>
                                    </div>
                                    <!-- <form class="user"> -->
                                    <%#= form_for(resource, html:{class:'user'}, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                    <%= form_for(resource, html:{class:'user'}, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                                      <%= render "users/shared/error_messages", resource: resource %>
                                      <div class="form-group">
                                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-user", placeholder:"Email" %>
                                      </div>
                                      <%= f.submit "Enviar instruções para recuperar a senha", class:"btn btn-primary btn-user btn-block" %>
                                    <% end %>
                                    
                                    <hr>
                                    
                                    <div class="text-center">
                                        <%= link_to new_user_session_path, class:"small" do %>
                                            Já tenho uma conta!
                                        <% end %>
                                    </div>
                                    <div class="text-center">
                                        <%= link_to new_user_registration_path, class:"small" do %>
                                            Criar uma conta
                                        <% end %>
                                    </div>

                                    <div class="text-center">
                                        <%#= render "users/shared/links" %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</body>
