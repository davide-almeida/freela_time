<!-- Begin Page Content -->
<div class="container-fluid">
 
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tarefas</h1>

    <div class="row">
        <div class="col-lg-12 mb-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><%= link_to "Dashboard", app_dashboard_path %></li>
                    <li class="breadcrumb-item"><%= link_to "Tarefas", app_tasks_path %></li>
                    <li class="breadcrumb-item active" aria-current="page">Editar Tarefa</li>
                </ol>
            </nav>
	    </div>
	</div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card shadow mb-12">
                <div class="card-header py-12">
                    <h6 class="m-0 font-weight-bold text-primary">Editar tarefa</h6>
                </div>
                <div class="card-body">
                    <div class="col-lg-12 col-xs-12" id="task_new">
                        <%= form_for([:app, @task], :remote => true) do |f| %>
                            <div class="form-row">
                                <div class="form-group col-md-6 col-lg-6 col-xs-12">
                                    <label>Empresa</label>
                                    <%= f.collection_select :company_id, @company_options_for_select, :id, :name, { prompt: 'Selecione a empresa' }, {:class =>"form-control", :tabindex => "-1", :required => true} %>
                                </div>
                                <div class="form-group col-md-6 col-lg-6 col-xs-12">
                                    <label>Projeto</label>
                                    <%= f.collection_select :project_id, @project_options_for_select, :id, :name, {}, {:class =>"form-control", :tabindex => "-1", :required => true} %>
                                </div>
                                <div class="form-group col-md-3 col-lg-3 col-xs-12">
                                    <label>Status</label>
                                    <%= f.select(:status, @status_options_for_select, {}, {:class =>"form-control", :tabindex => "-1", include_blank: false}) %>
                                </div>
                                <div class="form-group col-md-9 col-lg-9 col-xs-12">
                                    <label>Nome</label>
                                    <%= f.text_field :name, class:"form-control", placeholder:"Digite o nome da tarefa aqui.", required:"required" %>
                                </div>
                                <div class="form-group col-lg-12 col-xs-12">
                                    <%= f.submit "Cadastrar", class:"btn btn-primary", data: { disable_with: "Aguarde..." } %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->