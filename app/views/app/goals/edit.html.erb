<!-- Begin Page Content -->
<div class="container-fluid">
 
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Metas</h1>

    <div class="row">
        <div class="col-lg-12 mb-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><%= link_to "Dashboard", app_dashboard_path %></li>
                    <li class="breadcrumb-item"><%= link_to "Metas", app_goals_path %></li>
                    <li class="breadcrumb-item active" aria-current="page">Editar metas</li>
                </ol>
            </nav>
	    </div>
	</div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card shadow mb-12">
                <div class="card-header py-12">
                    <h6 class="m-0 font-weight-bold text-primary">Editar Meta</h6>
                </div>
                <div class="card-body">
                    <div class="col-lg-12 col-xs-12">
                        <%= form_for([:app, @goal]) do |f| %>
                            <div class="form-row">
                                <div class="form-group col-md-6 col-lg-6 col-xs-12">
                                    <label>Tipo</label>
                                    <%= f.select(:goal_type, options_for_goal_type(@goal.goal_type), {:selected => "Receita"}, {:class =>"form-control", :tabindex => "-1", include_blank: false})%>
                                </div>
                                <%= f.fields_for :goal_in_payments do |goal_in_payment| %>
                                    <div class="form-group col-md-6 col-lg-6 col-xs-12">
                                        <label>Valor meta</label>
                                        <%= goal_in_payment.text_field :goal_value, class:"form-control real", placeholder:"Valor total que você deseja receber no mês atual. Ex.: 1.000,00", required:"required" %>
                                    </div>
                                    <div class="form-group col-md-6 col-lg-6 col-xs-12">
                                        <label>Data Início</label>
                                        <%= goal_in_payment.date_field :start_date, class:"form-control datepicker", placeholder:"Ex.: 09/03/2021", required:"required" %>
                                    </div>
                                    <div class="form-group col-md-6 col-lg-6 col-xs-12">
                                        <label>Data Final</label>
                                        <%= goal_in_payment.date_field :end_date, class:"form-control datepicker", placeholder:"Ex.: 09/03/2021", required:"required" %>
                                    </div>
                                <% end %>
                                <div class="form-group col-lg-12 col-xs-12">
                                    <%= f.submit "Cadastrar", class:"btn btn-primary", data: { disable_with: "Aguarde..." } %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->