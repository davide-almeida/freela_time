<!-- Begin Page Content -->
<div class="container-fluid">
 
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tarefas</h1>

    <div class="row">
        <div class="col-lg-12 mb-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><%= link_to "Dashboard", app_dashboard_path %></li>
                    <li class="breadcrumb-item active" aria-current="page">Perfil</li>
                </ol>
            </nav>
	    </div>
	</div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card shadow mb-12">
                <div class="card-header py-12">
                    <h6 class="m-0 font-weight-bold text-primary">Editar perfil</h6>
                </div>
                <div class="card-body">
                    <div class="col-lg-12 col-xs-12" id="task_new">
                        <%= form_for([:app, @user], :remote => true) do |f| %>
                            <div class="form-row">
                                <div class="form-group col-md-12 col-lg-12 col-xs-12">
                                    <label>Email</label>
                                    <%= f.text_field :email, class:"form-control", placeholder:"Digite o seu email aqui.", required:"required" %>
                                </div>
                                <div class="form-group col-md-6 col-lg-6 col-xs-12">
                                    <label>Nome</label>
                                    <%= f.text_field :first_name, class:"form-control", placeholder:"Digite o seu primeiro nome aqui.", required:"required" %>
                                </div>
                                <div class="form-group col-md-6 col-lg-6 col-xs-12">
                                    <label>Sobrenome</label>
                                    <%= f.text_field :last_name, class:"form-control", placeholder:"Digite o seu sobrenome nome aqui.", required:"required" %>
                                </div>
                                <div class="form-group col-md-6 col-lg-6 col-xs-12">
                                    <label>Senha</label>
                                    <%= f.password_field :password, class:"form-control", placeholder:"Digite a sua senha aqui." %>
                                </div>
                                <div class="form-group col-md-6 col-lg-6 col-xs-12">
                                    <label>Confirmar Senha</label>
                                    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Digite novamente a sua senha aqui." %>
                                </div>
                                <div class="form-group col-lg-12 col-xs-12">
                                    <%= f.submit "Cadastrar", class:"btn btn-primary", data: { disable_with: "Aguarde..." } %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->