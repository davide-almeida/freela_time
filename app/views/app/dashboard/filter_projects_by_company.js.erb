$('select#task_schedule_project_id').html('<%= j options_from_collection_for_select(@filtered_projects, :id, :name) %>');

<% if @filtered_projects.present? %>
    $('#task_schedule_project_id').append($("<option disabled selected hidden></option>").attr("value","").text('Selecione o projeto'));
    $('#task_schedule_task_id')
        .find('option')
        .remove()
        .end()
    ;
    $('#task_schedule_task_id').append($("<option disabled selected hidden></option>").attr("value","").text('Você deve selecionar um projeto'));
<% else %>
    $('#task_schedule_project_id').append($("<option disabled selected hidden></option>").attr("value","").text('Não há projetos nesta empresa'));
    
    $('#task_schedule_task_id')
        .find('option')
        .remove()
        .end()
    ;
    $('#task_schedule_task_id').append($("<option disabled selected hidden></option>").attr("value","").text('Não há tarefas'));
<% end %>