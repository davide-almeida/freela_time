<div class="modal fade" id="dashboard_report" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Imprimir relatório</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <%= form_for(:dashboard_report, :url => app_dashboard_reports_print_in_payment_report_path) do |f| %>
            <div class="modal-body">
                <div class="">
                    <div class="form-row">
                        <div class="form-group col-md-12 col-lg-12 col-xs-12">
                            <label>Empresa</label>
                            <%#= f.collection_select :company_id, @company_options_for_select, :id, :name, { prompt: 'Selecione a empresa', required:"required" }, {:class =>"form-control", :tabindex => "-1"} %>
                            <select class="form-control" tabindex="-1" name="dashboard_report[company_id]" id="dashboard_report_company_id">
                                <option value="" disabled selected hidden>Selecione a empresa</option>
                                <% @company_dashboard_report_options_for_select.each do |company| %>
                                    <option value= <%= company.id %>> <%= company.name %> </option>
                                <% end %>
                            </select>
                        </div>
                        <div class="form-group col-md-12 col-lg-12 col-xs-12">
                            <label>Projeto</label>
                            <%#= f.collection_select :project_id, @project_options_for_select, :id, :name, { required:"required" }, {:class =>"form-control", :tabindex => "-1"} %>
                            <select class="form-control" tabindex="-1" name="dashboard_report[project_id]" id="dashboard_report_project_id">
                                <option value="" disabled selected hidden>Você deve selecionar uma empresa</option>
                                <% @project_dashboard_report_options_for_select.each do |project| %>
                                    <option value= <%= project.id %>> <%= project.name %> </option>
                                <% end %>
                            </select>
                        </div>
                        <div class="form-group col-md-12 col-lg-12 col-xs-12">
                            <label>Data início</label>
                            <%= f.date_field :start_date, class:"form-control", placeholder:"Ex.: 10/03/2021", required:"required" %>
                        </div>
                        <div class="form-group col-md-12 col-lg-12 col-xs-12">
                            <label>Data Final</label>
                            <%= f.date_field :end_date, class:"form-control", placeholder:"Ex.: 10/03/2021", required:"required" %>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Voltar</button>
                    <%= f.submit "Exibir relatório", class:"btn btn-primary", data: { disable_with: "Aguarde..." } %>
                </div>
            <% end %>
        </div>
    </div>
</div>
