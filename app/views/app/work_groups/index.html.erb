<!-- Begin Page Content -->
<div class="container-fluid">
 
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Grupos de trabalho</h1>

    <div class="row">
        <div class="col-lg-12 mb-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><%= link_to "Dashboard", app_dashboard_path %></li>
                    <li class="breadcrumb-item active" aria-current="page">Grupos de trabalho</li>
                </ol>
            </nav>
	    </div>
	</div>

    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card shadow mb-12">
                <div class="card-header py-12">
                    <h6 class="m-0 font-weight-bold text-primary">Opções</h6>
                </div>
                <div class="card-body">
                    <div class="col-sm-6 col-xs-12">
                        <div class="row">
                            <div class="col-xs-12 mr-2 b-3 p-1">
                                <%= link_to new_app_work_group_path, class:'btn btn-primary btn-icon-split' do %>
                                    <span class="icon text-white-50">
                                        <i class="fas fa-users"></i>
                                    </span>
                                    <span class="text">Cadastrar</span>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Grupos de trabalho</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered rounded" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>Nº membros</th>
                            <th>Líder</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @work_groups.each do |work_group| %>
                            <tr>
                                <td><%= work_group.name %></td>
                                <td><%= work_group.description %></td>
                                <td><%= work_group.users.count %></td>
                                <td><%= work_group.users.find(work_group.owner_user_id).first_name %></td>
                                <td width="12%">
                                    <%#= link_to app_project_change_status_path(project.id, :status => project.status, completed_projects: @completed_projects), class: "btn btn-success rounded btn-sm", data: {'toggle': "tooltip", 'placement': "top", 'original-title': @change_button_description}, method: :put do  %>
                                        <!--<i class="fas fa-fw fa-check"></i>-->
                                    <%# end %>
                                    <%= link_to edit_app_work_group_path(work_group.id), class: "btn btn-primary rounded btn-sm", data: {'toggle': "tooltip", 'placement': "top", 'original-title': "Editar"}, method: :get do  %>
                                        <i class="fas fa-fw fa-edit"></i>
                                    <% end %>
                                    <%= link_to app_work_group_path(work_group.id), class: "btn btn-danger rounded btn-sm", data: {confirm: "Você deseja excluir o grupo #{work_group.name} ?", 'toggle': "tooltip", 'placement': "top", 'original-title': "Excluir"}, method: :delete do  %>
                                        <i class="fas fa-fw fa-trash"></i>
                                    <% end %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->