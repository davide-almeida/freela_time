<!-- Begin Page Content -->
<div class="container-fluid">
 
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Grupos de trabalho</h1>

    <div class="row">
        <div class="col-lg-12 mb-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><%= link_to "Dashboard", app_dashboard_path %></li>
                    <li class="breadcrumb-item"><%= link_to "Grupos de trabalho", app_work_groups_path %></li>
                    <li class="breadcrumb-item active" aria-current="page">Editar grupo de trabalho</li>
                </ol>
            </nav>
	    </div>
	</div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card shadow mb-12">
                <div class="card-header py-12">
                    <h6 class="m-0 font-weight-bold text-primary">Editar grupo de trabalho</h6>
                </div>
                <div class="card-body">
                    <div class="col-lg-12 col-xs-12">
                        <%= form_for([:app, @work_group]) do |f| %>
                        <div class="form-row">
                            <div class="form-group col-md-12 col-lg-12 col-xs-12">
                                <label>Nome</label>
                                <%= f.text_field :name, class:"form-control", placeholder:"Digite o nome do grupo de trabalho aqui", required:"required" %>
                            </div>
                            <div class="form-group col-md-12 col-lg-12 col-xs-12">
                                <label>Descrição</label>
                                <%= f.text_area :description, class:"form-control", placeholder:"Você pode escrever aqui uma breve descrição sobre este grupo de trabalho." %>
                            </div>
                            <div class="form-group col-md-12 col-lg-12 col-xs-12">
                                <label>Contatos vinculados</label>
                                <%= f.collection_select(:user_ids, @user_options_for_select, :id, :first_name, {}, {multiple: true, :class =>"form-control tags", :tabindex => "-1"}) %>
                            </div>
                            <div class="form-group col-lg-12 col-xs-12">
                                <%= f.submit "Cadastrar", class:"btn btn-primary", data: { disable_with: "Aguarde..." } %>
                            </div>
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->