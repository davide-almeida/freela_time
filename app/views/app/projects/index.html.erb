<!-- Begin Page Content -->
<div class="container-fluid">
 
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Projetos</h1>

    <div class="row">
        <div class="col-lg-12 mb-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><%= link_to "Dashboard", app_dashboard_path %></li>
                    <li class="breadcrumb-item active" aria-current="page">Projetos</li>
                    <li class="breadcrumb-item active" aria-current="page"><%= @projects_page_title %></li>
                </ol>
            </nav>
	    </div>
	</div>

    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card shadow mb-12">
                <div class="card-header py-12">
                    <h6 class="m-0 font-weight-bold text-primary">Opções</h6>
                </div>
                <div class="card-body">
                    <div class="col-sm-6 col-xs-12">
                        <div class="row">
                            <div class="col-xs-12 mr-2 b-3 p-1">
                                <%= link_to new_app_project_path, class:'btn btn-primary btn-icon-split' do %>
                                    <span class="icon text-white-50">
                                        <i class="fas fa-folder"></i>
                                    </span>
                                    <span class="text">Cadastrar projeto</span>
                                <% end %>
                            </div>
                            <div class="col-xs-12 mr-2 b-3 p-1">
                                <%= link_to @link_projects, class:"btn #{@button_class} btn-icon-split" do %>
                                    <span class="icon text-white-50">
                                        <i class="<%=@fa_icon%>" aria-hidden="true"></i>
                                    </span>
                                    <span class="text"><%= @link_projects_button %></span>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"><%= @projects_page_title %></h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Empresa</th>
                            <th>Projeto</th>
                            <th>Descrição</th>
                            <th>valor</th>
                            <th>Tipo pagamento</th>
                            <th>Data fechamento</th>
                            <th>Data pagamento</th>
                            <th>Quant. de tarefas</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @projects.each do |project| %>
                            <tr>
                                <td><%= project.company.name %></td>
                                <td><%= project.name %></td>
                                <td>
                                    <% if project.description.blank? %>
                                        <i>Não há descrição.</i>
                                    <% else %>
                                        <%= project.description %>
                                    <% end %>
                                </td>
                                <td><%#= project.pay_day.strftime('%d/%m/%Y') %>
                                    <% if project.by_hour.nil? %>
                                        "Não existe"
                                    <% else %>
                                        <%= humanized_money_with_symbol project.by_hour.hour_price %>
                                    <% end %>
                                </td>
                                <td><%= project.payment_type %></td>
                                <td><%= l(project.by_hour.start_invoice_day) %></td>
                                <td><%= l(project.by_hour.start_pay_day) %></td>
                                <td>
                                    <% task_count = project.tasks.count %>
                                    <% if task_count > 0 %>
                                        <%= task_count %>
                                    <% else %>
                                        <i>Não há tarefas cadastradas.</i>
                                    <% end %>
                                </td>
                                <td><%= project.status %></td>
                                <td width="12%">
                                    <%# project_status change %>
                                    <% if project.status == "A fazer" %>
                                        <% @change_button_description = "Status: Em desenvolvimento" %>
                                    <% elsif project.status == "Em desenvolvimento" %>
                                        <% @change_button_description = "Status: Concluído" %>
                                    <% elsif project.status == "Concluído" %>
                                        <% @change_button_description = "Status: A fazer" %>
                                    <% end %>
                                    <%# completed_projects params %>
                                    <% if params[:completed_projects].nil? %>
                                        <% @completed_projects = nil %>
                                    <% else %>
                                        <% @completed_projects = true %>
                                    <% end %>
                                    <%# action buttons %>
                                    <%= link_to app_project_change_status_path(project.id, :status => project.status, completed_projects: @completed_projects), class: "btn btn-success btn-circle btn-sm", data: {'toggle': "tooltip", 'placement': "top", 'original-title': @change_button_description}, method: :put do  %>
                                        <i class="fas fa-fw fa-check"></i>
                                    <% end %>
                                    <%= link_to edit_app_project_path(project.id), class: "btn btn-primary btn-circle btn-sm", data: {'toggle': "tooltip", 'placement': "top", 'original-title': "Editar"}, method: :get do  %>
                                        <i class="fas fa-fw fa-edit"></i>
                                    <% end %>
                                    <%= link_to app_project_path(project.id), class: "btn btn-danger btn-circle btn-sm", data: {confirm: "Você deseja excluir o projeto #{project.name} e suas respectivas tarefas?", 'toggle': "tooltip", 'placement': "top", 'original-title': "Excluir"}, method: :delete do  %>
                                        <i class="fas fa-fw fa-trash"></i>
                                    <% end %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->